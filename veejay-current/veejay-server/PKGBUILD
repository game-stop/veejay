# Modified for ArchLinux by Niels <nwelburg@gmail.com>
pkgname=veejay
pkgrel=1
pkgver=1.5.24
pkgdesc="Veejay is a visual instrument and realtime video sampler for GNU/Linux, server"
arch=('i686' 'x86_64')
url="http://www.veejayhq.net"
license=('GPL')
groups=()
conflicts=('veejay')
depends=('libxml2' 'ffmpeg' 'ffmpeg-compat' 'sdl' 'gtk2' 'gdk-pixbuf2' 'libsm' )
optdepends=('liblo' 'libdv' 'libquicktime' 'jack')
source=()
md5sums=()
backup=()
replaces=()

build() {
	export PKG_CONFIG_PATH=/usr/lib/ffmpeg-compat/pkgconfig:/usr/lib/pkgconfig
	cd $startdir
	./autogen.sh
	./configure --prefix=/usr
	make || return 1
}

package() {
	cd $startdir
	make DESTDIR="$pkgdir/" install
}
